# .env.development.local - Variables para desarrollo LOCAL (sin Docker)

ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# MongoDB (localhost, requiere Docker: docker compose -f deployments/docker-compose.yml up -d mongodb)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=portfolio_db

# CORS (permitir orígenes de desarrollo)
CORS_ORIGINS=http://localhost:4321,http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# API
API_V1_PREFIX=/api/v1
PROJECT_NAME=AZFE Portfolio API - Development
VERSION=1.0.0-dev

# Security (valores de desarrollo, NO usar en producción)
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30